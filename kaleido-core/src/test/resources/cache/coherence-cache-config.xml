<?xml version="1.0"?>
<!DOCTYPE cache-config SYSTEM "cache-config.dtd">
<cache-config>

	<!-- Define mapping between "cache name" (can be a pattern) and cache-scheme (local, persistent, replicated, distributed) -->
	<caching-scheme-mapping>
		<!--
			Caches with any name will be created as default replicated.
		-->
		<cache-mapping>
			<cache-name>*</cache-name>
			<scheme-name>default-replicated</scheme-name>
		</cache-mapping>
	</caching-scheme-mapping>

	<caching-schemes>

		<!-- Sample cache configuration local, memory, disk eviction, clustered, ...  
			http://coherence.oracle.com/display/COH35UG/Sample+Cache+Configurations#SampleCacheConfigurations-Clusteredcaches  
		-->
		
		<!-- 
        	Default Replicated caching scheme.
        -->
        <local-scheme>
   			<scheme-name>default-replicated</scheme-name>
		</local-scheme>

	</caching-schemes>
	
</cache-config>



<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        ">
	
	<context:component-scan base-package="org.kaleidofoundry.core"/>
		
	<bean id="myClasspathStore" class="org.kaleidofoundry.core.store.ClasspathFileStore">
		<constructor-arg>
			<bean class="org.kaleidofoundry.core.context.RuntimeContext">
				<constructor-arg index="0" type="java.lang.String" value="foo"/>
				<constructor-arg index="1" type="java.lang.Class" value="org.kaleidofoundry.core.store.FileStore"/>
				<constructor-arg index="2" type="java.util.concurrent.ConcurrentMap">
					<map key-type="java.lang.String" value-type="java.lang.String">
						<entry key="uriRootPath" value="classpath:/store" />
					</map>

				</constructor-arg>
				<constructor-arg index="3"><null/></constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

</beans>
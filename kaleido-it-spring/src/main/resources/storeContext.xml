<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        ">

	<bean id="myClasspathStore" class="org.kaleidofoundry.core.store.ClasspathFileStore">
		<constructor-arg>
			<bean class="org.kaleidofoundry.core.context.RuntimeContext">
				<constructor-arg type="java.util.concurrent.ConcurrentMap">				
					<map>
						<entry key="uriRootPath" value="/store" />
					</map>
				</constructor-arg>
				<constructor-arg name="configurations">
					<null/>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

</beans>